{
    "version": "1",
    "widgets": [
        {
            "type": "text",
            "name": "Text Widget",
            "text": "Click here \r\n to collect and send the selected table rows to the editor.",
            "actions": {
                "onClick": [
                    {
                        "type": "collect",
                        "from": "table",
                        "message": {
                            "topic": "selectedRows"
                        }
                    },
                    {
                        "type": "send",
                        "to": "editor"
                    }
                ]
            },
            "options": {
                "style": {
                    "color": "grey",
                    "textAlign": "center",
                    "fontSize": "26px",
                    "fontWeight": "bold",
                    "fontFamily": "\"Courier New\", Courier, sans-serif",
                    "backgroundColor": "transparent"
                }
            },
            "id": "text_1",
            "layout": {
                "w": 10,
                "h": 4,
                "x": 0,
                "y": 0,
                "static": false
            }
        },
        {
            "type": "table",
            "name": "Demo Process Data",
            "dataSource": {
                "type": "read",
                "path": "/System/Core/Examples/WebStudio/Tables/SalesOrders"
            },
            "schema": [
                {
                    "name": "Item",
                    "title": "Item",
                    "actions": {
                        "onClick": {
                            "type": "action",
                            "name": "cellClick"
                        }
                    }
                },
                {
                    "name": "OrderDate",
                    "title": "Order date",
                    "format": "YYYY-MM-DD HH:mm:ss:SSS"
                },
                {
                    "name": "Region",
                    "title": "Region"
                },
                {
                    "name": "Rep",
                    "title": "Rep"
                },
                {
                    "name": "Total",
                    "title": "Total"
                },
                {
                    "name": "Unit Cost",
                    "title": "Unit Cost"
                },
                {
                    "name": "Units",
                    "title": "Units"
                }
            ],
            "captionBar": true,
            "options": {
                "multi": true,
                "style": {
                    "fontSize": "18px"
                },
                "pageSize": 10,
                "pagination": true,
                "allowSorting": true,
                "alternateColumnColoring": false,
                "alternateRowColoring": true,
                "showHoverHighLight": true
            },
            "id": "table",
            "layout": {
                "w": 13,
                "h": 10,
                "x": 10,
                "y": 0,
                "static": false
            }
        },
        {
            "type": "editor",
            "id": "editor",
            "name": "Editor",
            "completeMsgObject": false,
            "language": "json",
            "options": {
                "showToolbar": true
            },
            "editorOptions": {
                "fontSize": 12,
                "cursorStyle": "line",
                "readOnly": false
            },
            "layout": {
                "w": 10,
                "h": 6,
                "x": 0,
                "y": 4,
                "static": false
            }
        }
    ],
    "options": {
        "stacking": "vertical",
        "numberOfColumns": 24
    }
}