{
    "version": "1",
    "name": "actions-read-example-02",
    "widgets": [
        {
            "type": "text",
            "id": "text_1",
            "text": "actions-read-example-02",
            "captionBar": false,
            "options": {
                "style": {
                    "color": "grey",
                    "textAlign": "center",
                    "fontSize": "30px",
                    "fontWeight": "bold",
                    "backgroundColor": "transparent"
                }
            },
            "layout": {
                "w": 24,
                "h": 1,
                "x": 0,
                "y": 0,
                "static": true
            }
        },
        {
            "type": "text",
            "text": "Click me to retrieve data from the read endpoint and send data to the editor widget ",
