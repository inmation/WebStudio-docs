        {
            "type": "editor",
            "name": "Editor",
            "completeMsgObject": true,
            "options": {
                "showToolbar": true,
                "language": "json"
            },
            "editorOptions": {
                "fontSize": 12,
                "cursorStyle": "line",
                "readOnly": false
            },
            "layout": {
                "w": 12,
                "h": 5,
                "x": 12,
