{
    "version": "1",
    "name": "dataSource-subscribe-01",
    "widgets": [
        {
            "type": "text",
            "id": "text_1",
            "text": "dataSource-subscribe-01",
            "captionBar": false,
            "options": {
                "style": {
                    "color": "grey",
                    "textAlign": "center",
                    "fontSize": "30px",
                    "fontWeight": "bold",
                    "backgroundColor": "transparent"
                }
            },
            "layout": {
                "w": 24,
                "h": 1,
                "x": 0,
                "y": 0,
                "static": true
            }
        },
        {
            "type": "text",
            "id": "text_2",
            "captionBar": {
                "hidden": false,
                "title": "Subscribes to OnDataChanged event and sends output of dataSource to the editor widget",
                "showModelEditorButton": true
            },
            "dataSource": [
                {
                    "type": "subscribe",
                    "path": "/System/Core/Examples/Demo Data/Process Data/FC4711"
                }
            ],
            "actions": {
                "didUpdate": {
                    "type": "send",
                    "to": "editor_1"
                }
            },
            "layout": {
                "w": 12,
                "h": 5,
                "x": 0,
                "y": 1,
                "static": false
            }
        },
        {
            "type": "editor",
            "id": "editor_1",
            "name": "Editor",
            "completeMsgObject": true,
            "options": {
                "showToolbar": true,
                "language": "json"
            },
            "editorOptions": {
                "fontSize": 12,
                "cursorStyle": "line",
                "readOnly": false
            },
            "layout": {
                "w": 12,
                "h": 5,
                "x": 12,
                "y": 1,
                "static": false
            }            
        }
    ]
}